---
import Layout from '../layouts/Layout.astro';

const populations = [
  {
    title: "Teens (13+) & Young Adults",
    subtitle: "Finding Your Voice",
    desc: "Adolescence and early adulthood are messy. We work on untangling anxiety, identity questions, and the pressure to fit in, so you can move forward with confidence.",
    items: ["Identity & Self-Worth", "Anxiety & Perfectionism", "Trauma & Life Transitions", "LGBTQ+ Support"],
    icon: "üéß"
  },
  {
    title: "Adults",
    subtitle: "Reclaiming Your Story",
    desc: "Whether you're navigating burnout, questions of faith, or relationship struggles, we create space to process the past and build a life that feels authentic to you.",
    items: ["Complex Trauma (C-PTSD)", "Faith Transitions", "Burnout & Boundaries", "Relationship Patterns"],
    icon: "üåø"
  },
  {
    title: "Families",
    subtitle: "Restoring Connection",
    desc: "Specializing in family reunification and attachment repair. We focus on practical tools to rebuild trust and navigate the complex dynamics of foster care, adoption, or separation.",
    items: ["Family Reunification", "Attachment Repair", "Foster Care & Adoption", "Co-parenting Dynamics"],
    icon: "üè°"
  }
];

const themes = [
  { title: "Emotional Health", items: ["Anxiety & Panic", "Trauma & PTSD", "Depression", "Grief & Loss"] },
  { title: "Identity", items: ["Gender & Sexuality", "Faith Shifts", "Neurodiversity", "Perfectionism"] },
  { title: "Family Life", items: ["Reunification", "Adoption", "Attachment", "Parenting Support"] }
];
---

<Layout title="Services | Mountains to Sea Therapy">
  <!-- Hero -->
  <section class="relative pt-32 pb-20 bg-brand-primary text-white overflow-hidden">
    <div class="absolute inset-0 bg-brand-dark/10"></div>
    <div class="max-w-7xl mx-auto px-4 relative z-10 text-center">
      <h1 class="text-5xl md:text-6xl font-display font-bold mb-6">Who I Work With</h1>
      <p class="text-xl max-w-2xl mx-auto text-brand-light/90">
        Therapy tailored to teens, adults, and families navigating complex terrain.
      </p>
    </div>
  </section>

  <!-- Populations Grid -->
  <section class="py-24 max-w-7xl mx-auto px-4">
    <div class="grid md:grid-cols-3 gap-8">
      {populations.map((pop) => (
        <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 flex flex-col hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group">
          <div class="w-14 h-14 bg-brand-surface rounded-full flex items-center justify-center text-3xl mb-6 group-hover:bg-brand-primary/10 transition-colors">
            {pop.icon}
          </div>
          <h2 class="text-2xl font-display font-bold text-brand-dark mb-1">{pop.title}</h2>
          <span class="text-xs font-bold text-brand-secondary uppercase tracking-widest mb-4">{pop.subtitle}</span>
          <p class="text-gray-600 mb-8 leading-relaxed flex-grow">
            {pop.desc}
          </p>
          <ul class="space-y-3 pt-6 border-t border-gray-100">
            {pop.items.map(item => (
              <li class="flex items-center gap-3 text-sm text-gray-600">
                <span class="text-brand-primary">‚óè</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>

  <!-- Specialties Section -->
  <section class="py-24 bg-brand-surface">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-3xl font-display font-bold text-brand-dark mb-6">Inclusive, Affirming Care</h2>
          <div class="prose prose-lg text-gray-600">
            <p class="mb-6">
              My practice is affirming for LGBTQ+ folks, diverse family structures, non-monogamous relationships, and people navigating faith shifts and cultural questions.
            </p>
            <p class="font-bold text-brand-primary italic text-xl">
              "Therapy is a shame-free zone. You don‚Äôt have to earn your way into being taken seriously here."
            </p>
          </div>
          
          <div class="mt-10 flex flex-wrap gap-3">
             {['Trauma Informed', 'LGBTQ+ Affirming', 'Fat Positive', 'Anti-Racist', 'Neurodivergent Friendly'].map(tag => (
               <span class="bg-white border border-brand-primary/20 text-brand-primary px-4 py-2 rounded-full text-sm font-semibold">
                 {tag}
               </span>
             ))}
          </div>
        </div>
        
        <div class="grid grid-cols-1 gap-6">
          {themes.map(theme => (
             <div class="bg-white p-6 rounded-xl border border-gray-100 shadow-sm">
               <h3 class="font-display font-bold text-xl text-brand-dark mb-4 border-b border-gray-100 pb-2">{theme.title}</h3>
               <div class="flex flex-wrap gap-2">
                 {theme.items.map(item => (
                   <span class="text-sm text-gray-500 bg-brand-surface px-2 py-1 rounded">
                     {item}
                   </span>
                 ))}
               </div>
             </div>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <section class="py-24 bg-brand-primary text-white text-center">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-6">Ready to get started?</h2>
      <p class="text-brand-light/90 text-lg mb-8">
        We‚Äôll design therapy around your capacity. You set the goals, and we co-create the path.
      </p>
      <a href="/contact" class="inline-block bg-brand-secondary text-brand-dark font-bold px-8 py-4 rounded-full shadow-lg hover:shadow-xl hover:bg-white transition-all transform hover:-translate-y-1">
        Schedule a Consult
      </a>
    </div>
  </section>
</Layout>
